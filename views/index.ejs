<body>
    <div class="logo-options">
        <!-- the logo -->
        <%- include('Logo.ejs') %>

        <!-- sign out button -->
        <form action="/logout?_method=DELETE" method="POST">
            <button type="submit" class="logout-btn">‚éã</button>         
        </form>

        <!-- location button -->
        <div class="location">
            <button id="find-me" class="fancy-button">üìç</button>
            <p id="status"></p>
            <a id="map-link" target="_blank"></a>
        </div>
        
        <!-- slogan -->
        <h2 class="slogan">Kusi Mate, Kusi Day~</h2>
        
        <!-- notification button -->
        <a href="/notification" class="notification">üîî</a>
        <!-- message button -->
        <a href="http://localhost:3002" class="message">üíå</a>
